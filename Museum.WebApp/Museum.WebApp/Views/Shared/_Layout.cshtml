<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>    
    <link type="text/css" rel="stylesheet" href="/Scripts/themes/classic/galleria.classic.css" />
    <script type="text/javascript" src="/Scripts/galleria-1.3.2.min.js"></script>
    <script type="text/javascript" src="/Scripts/themes/classic/galleria.classic.min.js"></script>
</head>
<body>
    <header>
        <div class="content-wrapper clear-fix">
            <h1 class="site-title"><a href="~/" alt="Myseum Home" title="Myseum Home">Myseum</a></h1>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Download from iTunes", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Download from the Play Store", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </nav>
        </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <footer>
        <div class="content-wrapper">
            <span>Copyright &copy; 2013, Unicorns</span>
        </div>
    </footer>
</body>
</html>
